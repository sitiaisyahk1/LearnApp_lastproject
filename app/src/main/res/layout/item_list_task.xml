<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.meetsl.scardview.SCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDFEFF"
        app:cardCornerRadius="12dp"
        app:cardCornerVisibility="none"
        app:cardElevation="8dp"
        app:cardLightDirection="none"
        app:cardPreventCornerOverlap="true"
        app:cardShadowEndColor="#50FFFFFF"
        app:cardShadowStartColor="#50EAECEF"
        app:cardUseCornerArea="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <carbon.widget.ImageView
                android:id="@+id/iv_list_task"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/img_weblist"
                android:scaleType="fitXY"
                app:carbon_cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_category_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="ANDROID - FIRYAL"
                android:textColor="@color/blackP"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_weblist"
                app:layout_constraintTop_toTopOf="@+id/iv_weblist" />

            <TextView
                android:id="@+id/tv_time_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="26 Aug"
                android:textColor="@color/unselected_icon"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_task"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Retrofit with Kotlin"
                android:maxLines="1"
                android:letterSpacing="0.01"
                android:textColor="@color/blackP"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_weblist"
                app:layout_constraintStart_toStartOf="@+id/tv_category_task" />

