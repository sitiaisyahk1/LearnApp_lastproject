<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_detail_student"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/img_profile"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/montserrat_bold"
                android:textAlignment="center"
                android:textColor="@color/blackP"
                android:letterSpacing="0.02"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/btn_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_point_home"
                android:background="@android:color/transparent"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/tv_detail_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:letterSpacing="0.02"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_desc_student"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textSize="13sp"
            android:text="Description"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textAlignment="center"
            android:maxLines="3"
            android:letterSpacing="0.02"
            android:textColor="@color/unselected_icon"
            android:fontFamily="@font/montserrat_medium"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Project :"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="18sp"
            android:textColor="@color/blackP"
            android:layout_gravity="center"
            android:letterSpacing="0.02"/>

        <LinearLayout
            android:id="@+id/ll_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.meetsl.scardview.SCardView
                android:id="@+id/btn_github"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:defaultFocusHighlightEnabled="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:cardCornerVisibility="none"
                app:cardElevation="5dp"
                app:cardLightDirection="none"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#0333B5E5"
                app:cardShadowStartColor="#E8E9EC"
                app:cardUseCompatPadding="false"
                app:cardUseCornerArea="false">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_github" />

            </com.meetsl.scardview.SCardView>

            <com.meetsl.scardview.SCardView
                android:id="@+id/btn_linkedin"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:defaultFocusHighlightEnabled="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:cardCornerVisibility="none"
                app:cardElevation="5dp"
                app:cardLightDirection="none"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#0333B5E5"
                app:cardShadowStartColor="#E8E9EC"
                app:cardUseCompatPadding="false"
                app:cardUseCornerArea="false">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_linkedin" />

            </com.meetsl.scardview.SCardView>

            <com.meetsl.scardview.SCardView
                android:id="@+id/btn_behance"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:defaultFocusHighlightEnabled="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp"
                app:cardCornerVisibility="none"
                app:cardElevation="5dp"
                app:cardLightDirection="none"
                app:cardPreventCornerOverlap="false"
                app:cardShadowEndColor="#0333B5E5"
                app:cardShadowStartColor="#E8E9EC"
                app:cardUseCompatPadding="false"
                app:cardUseCornerArea="false">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_behance" />

            </com.meetsl.scardview.SCardView>
        </LinearLayout>

        <carbon.widget.Button
            android:id="@+id/btn_like"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/btn_bg"
            app:carbon_elevation="12dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:shadowColor="@color/blue"
            android:shadowRadius="100"
            android:text="LIKE"
            android:textColor="@color/white"
            app:carbon_elevationSpotShadowColor="@color/blue"
            app:elevation="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/illust_profile_student"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>