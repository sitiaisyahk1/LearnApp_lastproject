<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/carbon_grid8"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_16dp"
        app:cardCornerRadius="@dimen/_12dp"
        app:cardElevation="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_best_student"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:layout_marginStart="@dimen/_12dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_12dp"
                android:background="@drawable/img_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name_student_best"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12dp"
                android:layout_marginTop="@dimen/_10dp"
                android:fontFamily="@font/montserrat_bold"
                android:maxLines="1"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/_20sp"
                app:layout_constraintStart_toEndOf="@+id/iv_best_student"
                app:layout_constraintTop_toTopOf="@+id/iv_best_student" />

            <TextView
                android:id="@+id/tv_beston"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_name_student_best"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_student_best" />

            <TextView
                android:id="@+id/tv_point_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_liststudent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_point_best"
                app:layout_constraintEnd_toStartOf="@+id/tv_point_best"
                app:layout_constraintTop_toTopOf="@+id/tv_point_best"
                app:srcCompat="@drawable/ic_point_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>